%section.sign_in.container
  .row
    .col-sm-10.col-sm-offset-1
      = bootstrap_form_tag url: login_path, html: { class: "sign_in" }, layout: :horizontal, label_col: "col-sm-2", control_col: "col-sm-4" do |f|
        %header
          %h1 Sign in
        %fieldset
          .row
            = f.email_field :email, label: "Email Address"
          .row
            = f.password_field :password
          / .form-group
          /   %label Email Address
          /   .row
          /     .col-sm-4
          /       %input.form-control(type="email")
          / .form-group
          /   %label Password
          /   .row
          /     .col-sm-4
          /       %input.form-control(type="password")
        %fieldset.form-group.action
          %input(type="submit" value="Sign in" class="btn btn-default")
