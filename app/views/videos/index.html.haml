%article.video_category
  - @categories.each do |category|
    %header
      %h3= link_to "#{category.name}"
    .videos.row
      - category.recent_videos.each do |video|
        .video.col-sm-2
          = link_to video_path(video), {:id => "#{video.id}"}, nil do
            %img(src="/tmp/#{video.small_cover_url}")
