%section.admin_add_video
  .container
    .row
      .col-md-10.col-md-offset-1
        = bootstrap_form_for [:admin, @video], html: { class: "form-horizontal"} do |f|
          %ul.nav.nav-tabs
            %li
              %a(href="") Recent Payments
            %li.active
              %a(href="") Add a New Video
          %br
          %fieldset
            .form-group
              %label.control-label.col-sm-3
              .col-sm-3
                = f.text_field :title, class: "form-control"
            .form-group
              %label.control-label.col-sm-3
              .col-sm-6
                = f.select :category_id, options_for_select(Category.all.map {|category| [category.name, category.id]}), class: "form-control"
            .form-group
              %label.control-label.col-sm-3
              .col-sm-6
                = f.text_area :description, rows: 8, class: "form-control"
            .form-group
              %label.control-label.col-sm-3
              .col-sm-6
                = f.file_field :large_cover, class: "form-control"  
            .form-group
              %label.control-label.col-sm-3
              .col-sm-6
                = f.file_field :small_cover, class: "form-control"
            .form-group
              %label.control-label.col-sm-3
              .col-sm-6
                = f.text_field :video_url, class: "form-control"
          %fieldset.actions.form-group
            .col-sm-6.col-md-offset-3
              = f.submit "Add video", class: "btn btn-default"
